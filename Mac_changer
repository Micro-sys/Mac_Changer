hp='2'
asus='3'
msi='4' 
apple='5'
acer='6'
dell='7'
microsoft='8'
huawei='9'
xiaomi='10'
samsung='11'
nokia='12'
vaio='13'
micromax='14'
hcl='15'
wipro='16'
lg='17'
reliance='18'
sony='19'
gateway='20'
custommac='21'
me='22'
