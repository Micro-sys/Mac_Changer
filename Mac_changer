ifconfig wlan0 hw ether 28:A0:2B:EC:6F:93
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 28:A0:2B:EC:6F:93
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$samsung" ]; then                    #samsung

ifconfig wlan0 down
ifconfig wlan0 hw ether D8:9D:67:DA:2F:32
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether D8:9D:67:DA:2F:32
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$nokia" ]; then                    #nokia

ifconfig wlan0 down
ifconfig wlan0 hw ether 00:00:85:D2:01:4A
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 00:00:85:D2:01:4A
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$vaio" ]; then                    #vaio

ifconfig wlan0 down
ifconfig wlan0 hw ether F8:77:B8:0C:49:B1
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether F8:77:B8:0C:49:B1
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$micromax" ]; then                    #micromax

ifconfig wlan0 down
ifconfig wlan0 hw ether 00:18:AE:63:81:70
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 00:18:AE:63:81:70
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$hcl" ]; then                    #hcl

ifconfig wlan0 down
ifconfig wlan0 hw ether 34:4D:EA:87:8A:F8
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 34:4D:EA:87:8A:F8
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$wipro" ]; then                    #wipro

