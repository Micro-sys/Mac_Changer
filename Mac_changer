ifconfig wlan0 down
ifconfig wlan0 hw ether 9C:5C:F9:3F:17:D1
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 9C:5C:F9:3F:17:D1
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$acer" ]; then                    #acer

ifconfig wlan0 down
ifconfig wlan0 hw ether BC:F5:AC:FF:38:A6
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether BC:F5:AC:FF:38:A6
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$dell" ]; then                    #dell

ifconfig wlan0 down
ifconfig wlan0 hw ether 8C:F5:A3:CB:14:C6
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether 8C:F5:A3:CB:14:C6
ifconfig eth0 up
systemctl restart NetworkManager.service



elif [ "$x" == "$microsoft" ]; then                    #microsoft

ifconfig wlan0 down
ifconfig wlan0 hw ether FC:D8:48:03:54:8C
ifconfig wlan0 up
ifconfig eth0 down
ifconfig eth0 hw ether FC:D8:48:03:54:8C
ifconfig eth0 up
