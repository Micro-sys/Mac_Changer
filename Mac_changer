else 

e=1





echo -e ' \e[1;31m
 _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _ 
                                                                          
____  _____    ____    _    ____  _____ _____ _   _ _     _  __   __
| __ )| ____|  / ___|  / \  |  _ \| ____|  ___| | | | |   | | \ \ / /
|  _ \|  _|   | |     / _ \ | |_) |  _| | |_  | | | | |   | |  \ V / 
| |_) | |___  | |___ / ___ \|  _ <| |___|  _| | |_| | |___| |___| |  
|____/|_____|  \____/_/   \_\_| \_\_____|_|    \___/|_____|_____|_|   
 _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _   _ 
                                                                        
'


fi



